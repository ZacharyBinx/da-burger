<h1>To Eat and The Eaten!</h1>
<div>
  <h2>Burgers To Eat!</h2>

  <ul>
    {{#each burgers}}
    {{#unless eaten}}
    {{> burgers/burger-block eaten=true}}
    {{/unless}}
    {{/each}}
  </ul>
</div>

<div>
<h2>Burgers You Have Eaten!</h2>

<ul>
  {{#each burgers}}
  {{#if eaten}}
  {{> burgers/burger-block eaten=false}}
  {{/if}}
  {{/each}}
</ul>
</div>

<h2>Add Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="food">Burger:</label>
    <input type="text" id="food" name="name">
  </div>

  <div class="form-group">
    <label for="food">Burger</label><br>
    <input type="radio" name="eaten" value="1" checked> Eaten!<br>
    <input type="radio" name="eaten" value="0"> To Eat!
  </div>

  <button type="submit">Add Burger</button>
</form>