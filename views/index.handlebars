<div class="burger-head">
  <h1 style="text-align: center;">To Eat and The Eaten!</h1>
  <div class="row justify-content-around">
    <div class="col-4">
      <h2 class="burger-head">Burgers To Eat!</h2>

      <ul>
        {{#each burgers}}
        {{#unless eaten}}
        {{> burgers/burger-block eaten=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-4">
      <h2>Burgers You Have Eaten!</h2>

      <ul>
        {{#each burgers}}
        {{#if eaten}}
        {{> burgers/burger-block eaten=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-3">
      <h2>Add Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="food">Burger:</label>
          <input type="text" id="food" name="name">
        </div>

        <div class="form-group">
          <label for="food">Burger</label><br>
          <input type="radio" name="eaten" value="1" checked> Eaten!
          <input type="radio" name="eaten" value="0"> To Eat!
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>